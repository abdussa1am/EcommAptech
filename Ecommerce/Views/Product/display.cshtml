@model IEnumerable<Ecommerce.Models.Product>



<a asp-controller="Product" asp-action="create">Create Product</a>


@{



    foreach (var item in Model)
    {
       
        <ul>

            <li>
                @item.Name | @item.Price
                <a asp-controller="Product" asp-action="delete" asp-route-id="@item.Id">Delete</a>
                <a asp-controller="Product" asp-action="details" asp-route-id="@item.Id">Details</a>
                <a asp-controller="Product" asp-action="edit" asp-route-id="@item.Id">Edit</a>
            </li>
        </ul>

    }

}